---
import type {News} from "../models/news";
interface Props {
    news:News
}

const {news} = Astro.props;
---


<div class="w-[30%] min-w-[300px] bg-white  rounded-lg shadow">
    <a href="#">
        <img class="rounded-t-lg min-h-[200px]" src={news.image} alt=""/>
    </a>
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-black">{news.title}</h5>
            <h4 class="mb-2 text-xl font-bold tracking-tight text-black ">{news.date}</h4>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{news.content}</p>
        {news.links?.map((link) => (
            () => {
                if (link.url) return (
                        <a href={link.url}
                           target="_blank"
                           class="mx-2 inline-flex items-center my-2 px-3 py-2 text-sm font-medium text-center text-white bg-blue rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            {link.content}
                            <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                 fill="none"
                                 viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                      stroke-width="2"
                                      d="M1 5h12m0 0L9 1m4 4L9 9"/>
                            </svg>
                        </a>)
            }
        ))}

    </div>
</div>
